    <td><%= tracteur_neuf.stock %></td>
    <td><%= tracteur_neuf.famille %></td>
    <td><%= tracteur_neuf.modele %></td>
    <td><%= tracteur_neuf.description %></td>
    <td><%= tracteur_neuf.prix %></td>
    <td><%= tracteur_neuf.bonus %></td>
    <td><%= tracteur_neuf.arrivee %></td>
    <td><%= tracteur_neuf.facture %></td>
