	  	</div>
	  	<div class="actions">
	    	<%= f.submit "Rechercher" %>
	  	</div>
	<% end %>
</div>

<br />
<%= link_to 'Nouveau Tracteur', new_tracteur_neuf_path %>
<br />
<%= link_to 'Retour', acceuil_index_path %>
