<h1>Liste des Souffleurs</h1>


<div class="search">
	<%= search_form_for @search do |f|%>
		<div class="field">
		    <%= f.label :model_or_serial_or_stock_cont, "Recherche Modele ou #Serie" %>
		    
		  
		    <%= f.text_field :model_or_serial_or_stock_cont %>
	  	</div>
	  	<div class="actions">
	    	<%= f.submit "Rechercher" %>
	  	</div>
	<% end %>
</div>

<% if can? :create, Snowblower %>
	<%= link_to 'Nouveau Souffleur', new_snowblower_path %>
<% end %>
<br />
<%= link_to 'Retour a l\'accueil', acceuil_index_path %>

<table class="table">
  <tr>
  	<th><%= sort_link @search, :location, "Emplacement" %></th>
  	<th><%= sort_link @search, :brand, "Marque" %></th>
    <th><%= sort_link @search, :model, "Modele" %></th>
    <th><%= sort_link @search, :color, "Couleur" %></th>
    <th><%= sort_link @search, :stock, "# Stock" %></th>
    <th><%= sort_link @search, :serial, "# Serie" %></th>
    <th><%= sort_link @search, :description, "Description" %></th>
    <th><%= sort_link @search, :fielddate, "Date Arrivee" %></th>
    <th><%= sort_link @search, :status, "Status" %></th>
    <th><%= sort_link @search, :price, "Prix" %></th>
    <th><%= sort_link @search, :bonus, "Bonus" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snowblowers.each do |snowblower| %>
  <tr>
  	<td><%= snowblower.location.name %></td>
    <td><%= snowblower.brand %></td>
    <td><%= snowblower.model %></td>
    <td><%= snowblower.color %></td>
    <td><%= snowblower.stock %></td>
    <td><%= snowblower.serial %></td>
    <td><%= snowblower.description %></td>
    <td><%= snowblower.fielddate %></td>
    <td><%= snowblower.status.stat %></td>    
    <td><%= number_to_currency(snowblower.price) %></td>
    <td><%= number_to_currency(snowblower.bonus) %></td>
    <td><%= link_to 'Details', snowblower %></td>
    <% if can? :update, Snowblower %>
    	<td><%= link_to 'Modifier', edit_snowblower_path(snowblower) %></td>
    <% end %>
    <% if can? :destroy, Snowblower %>
    	<td><%= link_to 'Supprimer', snowblower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	<% end %>
  </tr>
<% end %>
</table>

<br />


