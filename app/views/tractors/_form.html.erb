    -%>
  </div>
  
  
  <div class="field">
    <%= f.label "Emplacement" %><br />
    <%= f.collection_select(:location_id, Location.all, :id, :name ) %>    
  </div>


  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  
  
  <div class="field">
    <%= f.label :serial %><br />
    <%= f.text_field :serial %>
  </div>
  <div class="field">
    <%= f.label :hours %><br />
    <%= f.number_field :hours, :placeholder => 0 %>
  </div>
  <div class="field">
    <%= f.label :invoice %><br />
    <%= f.number_field :invoice %>
  </div>
  <div class="field">
    <%= f.label :invdate %><br />
    <%= f.date_select :invdate %>
  </div>
  <div class="field">
    <%= f.label :fielddate %><br />
    <%= f.date_select :fielddate %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
