<%= form_for(@tractor) do |f| %>
  <% if @tractor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tractor.errors.count, "error") %> prohibited this tractor from being saved:</h2>

      <ul>
      <% @tractor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Status" %><br />
    <%= f.collection_select(:status_id, Status.all, :id, :stat ) %>
    
    <%-# :color_id is the foreign key that resides in the Users table
