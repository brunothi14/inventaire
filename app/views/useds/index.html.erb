<h1>Liste des Usages</h1>


<div class="search">
	<%= search_form_for @search do |f|%>
		<div class="field">
		    <%= f.label :model_or_serial_or_stock_cont, "Recherche Modele, #Serie, #Stock" %>
		    
		  
		    <%= f.text_field :model_or_serial_or_stock_cont %>
	  	</div>
	  	<div class="actions">
	    	<%= f.submit "Rechercher" %>
	  	</div>
	<% end %>
</div>


<% if can? :create, Used %>
	<%= link_to 'Nouveau Usage', new_used_path %>
<% end %>
<table class="table">
  <tr>
    <th><%= sort_link @search, :location, "Empl" %></th>
    <th><%= sort_link @search, :model, "Modele" %></th>
    <th><%= sort_link @search, :year, "Annee" %></th>
    <th><%= sort_link @search, :serial, "#Serie" %></th>
    <th><%= sort_link @search, :stock, "#Stock" %></th>
    <th><%= sort_link @search, :hours, "Heures" %></th>
    <th><%= sort_link @search, :fielddate, "Arrivee" %></th>
    <th><%= sort_link @search, :lsp, "LSP" %></th>
    <th><%= sort_link @search, :price, "Prix" %></th>
    <th><%= sort_link @search, :bonus, "Bonus" %></th>
    <th><%= sort_link @search, :description, "Description" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @useds.each do |used| %>
  <tr>
    <td><%= used.location.name %></td>
    <td><%= used.model %></td>
    <td><%= used.year %></td>
    <td><%= used.serial %></td>
    <td><%= used.stock %></td>
    <td><%= used.hours %></td>
    <td><%= used.fielddate %></td>
    <td><%= number_to_currency(used.lsp) %></td>
    <td><%= number_to_currency(used.price) %></td>
    <td><%= number_to_currency(used.bonus) %></td>
    <td><%= used.description %></td>
    <td><%= link_to 'Details', used %></td>
    <% if can? :update, Used %>
    	<td><%= link_to 'Modifier', edit_used_path(used) %></td>
    <% end %>
    <% if can? :destroy, Used %>
    	<td><%= link_to 'Supprimer', used, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
